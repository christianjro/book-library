<h2 class="page-header">New Book</h2> 
<!-- action is the url the form goes to -->
<form action="/books" method="POST">
    <!-- the inputs are written in a partial file so that the edit can also access it -->
    <%- include('_form_fields') %>
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/books">Cancel</a>
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>